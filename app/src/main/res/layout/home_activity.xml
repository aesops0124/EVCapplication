<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/homepage_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="@string/app_name"

        android:textSize="30sp"/>
    <ImageView
        android:id="@+id/homepage_image_icon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:src="@drawable/evc_icon"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:contentDescription="@string/description_icon"/>
    <TextView
        android:id="@+id/home_text_desciption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="@string/home_slogan"
        android:textSize="30sp"/>

    <!--handle later: for swipe-->
    <TextView
        android:id="@+id/home_text_swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="end|center"
        android:text="@string/home_swipe"
        android:paddingRight="30sp"
        android:textSize="20sp"/>
    <!--handle later-->
</LinearLayout>
