<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--Title Bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:background="@drawable/text_block">
                <ImageView
                    android:id="@+id/chargingstation_item_icon_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/chargingstation_icon" />
                <TextView
                    android:id="@+id/chargingstation_item_text_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:text="[Charging Station Name]"
                    android:textSize="25sp"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:background="@drawable/text_block">
                <ImageView
                    android:id="@+id/chargingstation_item_icon_chargingStationAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="15dp"
                    android:src="@drawable/location_icon" />
                <TextView
                    android:id="@+id/chargingstation_item_text_chargingStationAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:text="[Charging Station Address]"
                    android:textSize="20sp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>

        <!--<ImageView-->
            <!--android:id="@+id/item_icon_status"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:contentDescription="Real Time Status"-->
            <!--android:src="@drawable/share_icon" />-->
    </LinearLayout>

    <!--Map Fragment-->
    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/chargingstation_item_map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <!--Information Bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chargingstation_item_text_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="[Type]"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/chargingstation_item_text_socket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="[Socket]"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/chargingstation_item_text_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="[Quantity]"
            android:textSize="30sp" />
    </LinearLayout>
    <!--Button Bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/chargingstation_item_button_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.22"
            android:background="@drawable/custombutton_background_selector"
            android:text="@string/item_button_addToFavorites" />

        <Button
            android:id="@+id/chargingstation_item_button_locate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.22"
            android:background="@drawable/custombutton_background_selector"
            android:text="@string/item_button_locatePosition" />
    </LinearLayout>

</LinearLayout>
