<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:minHeight="150sp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/search_result_list_view_icon_chargingStation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:src="@drawable/chargingstation_icon" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_result_list_view_item_chargingStation"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="[charging station]"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/search_result_list_view_item_address"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="[address]"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/search_result_list_view_item_district"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="[district]"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3.5"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/search_result_list_view_icon_speed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/speed_icon" />

            <TextView
                android:id="@+id/search_result_list_view_item_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="[type]"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/search_result_list_view_icon_socket"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/small_socket_icon" />

            <TextView
                android:id="@+id/search_result_list_view_item_socket"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="[socket]"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
