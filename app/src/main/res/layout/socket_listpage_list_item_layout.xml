<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:minHeight="150sp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/socket_listpage_list_view_item_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_marginLeft="15dp"
        android:layout_weight="1"
        android:src="@drawable/location_icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/socket_listpage_list_view_item_chargingStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[Charging Station]"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/socket_listpage_list_view_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="[Address]"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/socket_listpage_list_view_item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="[Distance]"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/socket_listpage_list_view_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="[Time]"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>
